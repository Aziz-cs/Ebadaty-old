<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_simple"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >


            <TextView
                android:id="@+id/textView2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:text="تقرير جديد"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#8B5A2B"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:text="هذا الزر لعمل تقرير جديد، والتقرير عبارة عن استمارة يتم ملئها بالعبادات التى عملها فى اليوم، ثم بعد ذلك سوف يأتى لك تقرير فيه نتائج هذه العبادات، وهو مكون من اختيارين، اول اختيار انك تختار عدد الايام التى تريد النتائج بعدها (3، 5 ، 7 أيام)، واختيار الوقت المفضل التى تريد فيه ملئ التقرير، مثلاً فى اخر اليوم بعد صلاة العشاء.. وإذا اراد المستخدم إلغاء تقرير فعال عليه ان يضغط على زر قائمة من الموبيل فى الصفحة الرئيسية فى البرنامج، ثم اختيار: إلغاء التقرير الحالى "
                android:textColor="#8B5A2B"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cart_separator" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:text="فضائل الاعمال"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#8B5A2B"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:text="هذا الاختيار به فضائل العبادات وبه ايضاً بعض فقه هذه العبادات، وهدفها الترغيب للمسلم عمل هذه العبادات التى بها الاجر والثواب الكبير"
                android:textColor="#8B5A2B"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cart_separator" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:text="تقرير النتائج"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#8B5A2B"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:text="تقرير النتائج يظهر للمستخدم بعد ملئ التقرير فى المدة التى حددها، وبه نتائج المستخدم فى العبادات التى عملها فى المدة التى حددها، فإذا رأى المستخدم تقصير فى عبادة معينة فعليه أن يقرأ عن فضلها وذلك بالضغط عليها من خلال تقرير النتائج او من صفحة فضائل الاعمال، لكى ينشط ويرغب فيها والله الموفق والمستعان"
                android:textColor="#8B5A2B"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>